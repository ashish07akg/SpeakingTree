<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="160dp"
    android:layout_height="160dp"
    card_view:cardElevation="5dp"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/grid_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/save" >
    </ImageView>

    <LinearLayout
        android:layout_width="160dp" android:alpha="0.7" android:orientation="vertical" android:minHeight="50dp"
        android:layout_alignBottom="@id/grid_item_image" android:layout_centerHorizontal="true" android:gravity="bottom" android:background="#000000"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content" android:paddingLeft="5dp" android:id="@+id/txtMastername" android:textColor="#ffffff" android:gravity="bottom"  android:textSize="16dp" android:text="Ashish"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content" android:paddingLeft="5dp"
            android:id="@+id/txtFollwercount" android:textColor="#ffffff" android:gravity="bottom"  android:textSize="16dp" android:text="Gupta"
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>

    </android.support.v7.widget.CardView>