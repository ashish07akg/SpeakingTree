<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" android:layout_marginBottom="2dp" android:paddingLeft="16dp" android:paddingRight="16dp" >

    <ImageView
        android:layout_width="70dp" android:scaleType="fitXY"
        android:layout_height="70dp"  android:src="@drawable/save"
        android:id="@+id/imageViewMaster" />
    <TextView
        android:id="@+id/textViewUpdateText"
        android:paddingLeft="5dp"
        android:textColor="#5C002E"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
</LinearLayout>